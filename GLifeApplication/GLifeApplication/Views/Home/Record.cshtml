<style>
    .container-fluid {
        padding-top: 30px;
    }

    .calories_result {
        color: lightseagreen;
    }

    h6 {
        color: slategrey;
    }

    .thumbnail {
        padding: 0 0 15px 0;
        border: none;
        border-radius: 0;
    }

        .thumbnail img {
            width: 100%;
            height: 100%;
            margin-bottom: 5px;
        }

    .history .col-md-3 {
        padding: 10px;
    }

    .content {
        position: relative;
        display: inline-block;
    }

        .content:hover .btn-edit{
            opacity: 1;
        }

        .content:hover .btn-delete {
            opacity: 1;
        }

    .btn-delete {
        transition: .35s ease;
    }
    .btn-delete:hover {
        color:black;           
    }

    .btn-edit {
        position: absolute;
        top: 0;
        right: 30px;
        opacity: 0;
        transition: opacity .35s ease;
    }

    .btn-circle {
        width: 30px;
        height: 30px;
        padding: 6px 0;
        font-size: 12px;
        line-height: 1.428571429;
        border-radius: 15px;
        text-align: center;
