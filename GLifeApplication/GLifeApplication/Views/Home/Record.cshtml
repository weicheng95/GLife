@*script for calender *@
<script>
    $('#calender').datepicker({
        altFormat: "yy/mm/dd",
        dateFormat: "yy/mm/dd",
        onSelect: function (date) {
            $.ajax({
                type: "GET",
                url: "/Home/Record",
                data: "Date=" + date,
                dataType: "html",
                contentType: 'application/html; charset=utf-8',
                success: function (data) {
                    $('body').html(data);
                },
                error: function () {
                    alert("Error occured!!")
                }
            });
        }
    });

    $(document).ready(function () {
        $('#previous-date').click(function (event) {
            event.preventDefault();
            var date = $('#previous-date').val();
            $.ajax({
                type: "GET",
                url: "/Home/Record",
                data: "Date=" + date,
                success: function (data) {
                    $('body').html(data);
                }
            });
        });
    });

    $(document).ready(function () {
        $('#next-date').click(function (event) {
            event.preventDefault();
            var date = $('#next-date').val();
            $.ajax({
                type: "GET",
                url: "/Home/Record",
                data: "Date=" + date,
                success: function (data) {
                    $('body').html(data);
                }
            });
        });
    });


</script>
