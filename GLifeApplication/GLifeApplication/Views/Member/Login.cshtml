@model GLifeApplication.ViewModels.AccountLoginView

@{
    ViewBag.Title = "登入";
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
<div class="container" style="height:500px;">
    <div class="page-header">
        <h1>Login</h1>
    </div>
    <div class="form-horizontal">
        @using (Html.BeginForm())
    {
            <div class="alert alert-warning">
                @Html.ValidationSummary()
            </div>

            <div class="form-group">
                @Html.LabelFor(model =>model.Username, new { @class = "col-xs-4 col-md-1 form-label"})
                <div class="col-xs-8 col-md-11">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Username, null, new { @class = "label label-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "col-xs-4 col-md-1 form-label" })
                <div class="col-xs-8 col-md-11">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input class="btn btn-primary" type="submit" value="Login" />
                    @Html.ActionLink("Register", "Register")
                </div>
            </div>
    }
    </div>
</div>
